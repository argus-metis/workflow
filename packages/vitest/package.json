{
  "name": "@workflow/vitest",
  "version": "0.0.0",
  "description": "Vitest plugin for Workflow DevKit",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/vercel/workflow.git",
    "directory": "packages/vitest"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "tsc --build --clean && rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@workflow/rollup": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@workflow/tsconfig": "workspace:*",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "vitest": ">=2.0.0"
  }
}
