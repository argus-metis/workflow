{
  "name": "@workflow/utils",
  "description": "Utility functions for Workflow DevKit",
  "version": "4.0.1-beta.10",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/vercel/workflow.git",
    "directory": "packages/utils"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./get-port": {
      "types": "./dist/get-port.d.ts",
      "default": "./dist/get-port.js"
    },
    "./check-data-dir": {
      "types": "./dist/check-data-dir.d.ts",
      "default": "./dist/check-data-dir.js"
    },
    "./project": {
      "types": "./dist/project.d.ts",
      "default": "./dist/project.js"
    },
    "./worlds-manifest": {
      "types": "./dist/worlds-manifest.d.ts",
      "default": "./dist/worlds-manifest.js"
    },
    "./env-var-names": {
      "types": "./dist/env-var-names.d.ts",
      "default": "./dist/env-var-names.js"
    }
  },
  "scripts": {
    "prebuild": "cp ../../worlds-manifest.json ./src/worlds-manifest.json",
    "build": "pnpm prebuild && tsc && cp ./src/worlds-manifest.json ./dist/worlds-manifest.json",
    "predev": "cp ../../worlds-manifest.json ./src/worlds-manifest.json",
    "dev": "pnpm predev && tsc --watch",
    "postdev": "cp ./src/worlds-manifest.json ./dist/worlds-manifest.json",
    "clean": "tsc --build --clean && rm -rf dist && rm -f src/worlds-manifest.json",
    "test": "vitest run src",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/ms": "2.1.0",
    "@types/node": "catalog:",
    "@workflow/tsconfig": "workspace:*",
    "vitest": "catalog:"
  },
  "dependencies": {
    "ms": "2.1.3"
  }
}
